<h1>サインアップ</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>"<%= @user.name %>"は保存されませんでした。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="">
    <%= f.label :name, "名前:" %>
    <br>
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.label :email, "Eメールアドレス:" %>
    <br>
    <%= f.email_field :email %>
  </div>
  <div class="">
    <%= f.label :password, "パスワード入力:" %>
    <br>
    <%= f.password_field :password %>
  </div>
  <div class="">
    <%= f.label :password_confirmation, "パスワード再入力:" %>
    <br>
    <%= f.password_field :password_confirmation %>
  </div><br>
  <%= f.submit "アカウント作成" %>
<% end %>
